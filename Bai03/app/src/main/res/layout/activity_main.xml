<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#484CAF50"
    android:orientation="vertical">

    <TextView
        android:id="@+id/chuyenDoiNamDuongLich"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:text="Chuyển đổi năm dương lịch"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/namDuongLich"
            android:layout_width="98dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="Năm dương lịch"
            android:textColor="#151515"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtNamDuongLich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:gravity="right"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnChuyenDoi"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:text="Chuyển đổi" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/namAmLich"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Năm âm lịch"
            android:textColor="#151515"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtNamAmLich"
            android:layout_width="192dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:background="#FFEB3B"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#171616" />

    </LinearLayout>

</LinearLayout>
